# Database (SQLite - stored in project directory as kk_exec.db)
DATABASE_URL=sqlite+aiosqlite:///./kk_exec.db
DATABASE_URL_SYNC=sqlite:///./kk_exec.db

# Encryption (Fernet key - generate new one for production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# LLM Configuration
OPENAI_API_KEY=sk-...
DEFAULT_MODEL=gpt-4o

# MCP Configuration
MCP_TIMEOUT=30

# Redis (for ARQ background tasks)
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# OAuth - Slack (create app at https://api.slack.com/apps)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=https://hiklik.ai/api/v1/oauth/slack/callback

# OAuth - GitHub (create app at https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://hiklik.ai/api/v1/oauth/github/callback

# OAuth - Notion (create integration at https://www.notion.so/my-integrations)
# 1. Create a new integration (public)
# 2. Enable "User Capabilities" with read user info
# 3. Add redirect URI: https://hiklik.ai/api/v1/oauth/notion/callback
# 4. Copy OAuth client ID and client secret
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=https://hiklik.ai/api/v1/oauth/notion/callback

# Frontend URL (for OAuth callback redirects)
FRONTEND_URL=https://hiklik.ai
